{
      // editor
    "editor.fontSize": 12,
    "editor.fontFamily": "Fira Code, Menlo, Monaco, 'Courier New', monospace",
    //"editor.fontWeight": "normal"
    "editor.fontWeight": "400",
    "editor.fontLigatures": true,
    "editor.insertSpaces": auto,
    "editor.suggestSelection": "first",
    "editor.tabSize": 0,
    "editor.folding": true,
    "editor.minimap.enabled": false,
      // extensions
    "extensions.autoUpdate": false,
      // files
    "files.autoSave": "onFocusChange",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/tmp": true,
        "**/node_modules": true,
        "**/bower_components": true,
        "**/dist": true,
        "**/logs": true,
        "**/log": true
    },
    "files.trimTrailingWhitespace": false,
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true,
        "**/tmp/**": true,
        "**/bower_components/**": true,
        "**/dist/**": true,
        "**/logs": true,
        "**/log": true
    },
      // git
    "git.enabled": true,
    "git.path": "${env:BIN_PATH}/git",
      // outline
    "outline.showVariables": false,
      // powershell
    "powershell.startAutomatically": false,
    "powershell.integratedConsole.showOnStartup": false,
      // telemetry
    // obsolete "telemetry.enableCrashReporter": false,
    // obsolete "telemetry.enableTelemetry": false,
    "telemetry.telemetryLevel": "off",
    "rest-client.enableTelemetry": false,
      // terminal
    "terminal.integrated.rendererType": "dom",
      // terminal windows
    "terminal.integrated.shellArgs.windows": ["-NoStartupWindow"],
      // terminal macos
    "terminal.integrated.defaultProfile.osx": "fish",
    "terminal.integrated.profiles.osx": {
        "bash": {
            "path": "bash",
            "args": [
                "-l"
            ],
            "icon": "terminal-bash"
        },
        "zsh": {
            "path": "zsh",
            "args": [
                "-l"
            ]
        },
        "fish": {
            "path": "/usr/local/bin/fish",
            "args": [
                "-l"
            ]
        }
    },
      // window
    "window.zoomLevel": 1,
    "window.titleBarStyle": "custom",
      // workbench
    "workbench.activityBar.visible": true,
    "workbench.secondarySideBar.defaultVisibility": "visible",
    "workbench.statusBar.visible": true,
    "workbench.colorTheme": "Monokai",
    "workbench.iconTheme": "vscode-icons",
      // vim
    "vim.autoindent": true,
    "vim.cursorStylePerMode.normal": "block",
    "vim.cursorStylePerMode.insert": "underline",
    "vim.ignorecase": true,
    "vim.history": 1024,
    "vim.smartcase": true,
    "vim.gdefault": true,
    "vim.useSystemClipboard": true,
    "vim.visualstar": true,
    "vim.normalModeKeyBindingsNonRecursive": [
      {
        "before": [
          "Z"
        ],
        "commands": [
          ":tabp"
        ]
      },
      {
        "before": [
          "X"
        ],
        "commands": [
          ":tabn"
        ]
      },
      {
          "before": ["<leader>", "d"],
          "after": [],
          "commands": [
              {
                  "command": "gitlens.diffWithPrevious"
              }
          ]
      }
    ],
    "vim.autoSwitchInputMethod.enable": true,
    "vim.autoSwitchInputMethod.defaultIM": "com.apple.keylayout.ABC",
    "vim.autoSwitchInputMethod.obtainIMCmd": "${env:BIN_PATH}/im-select",
    "vim.autoSwitchInputMethod.switchIMCmd": "${env:BIN_PATH}/im-select {im}",
      // biome
    "biome.lsp.bin": "${env:BIN_PATH}/biome",
      // dotnet
    "dotnetAcquisitionExtension.existingDotnetPath": [
        {"extensionId": "msazurermtools.azurerm-vscode-tools", "path": "${env:DOTNET_PATH}/dotnet"}
    ],
      // eslint
    "eslint.codeActionsOnSave.rules": null,
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "svelte"
    ],
      // gitlens
    "gitlens.advanced.telemetry.enabled": false,
      // sonarlint
    "sonarlint.pathToNodeExecutable": "${env:BIN_PATH}/node",
      // tslint
    "tslint.jsEnable": true,
      // vtools
    "vtools.autoHideSideBar": true,
    "vtools.autoHideBottomBar": true,
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "svelte.enable-ts-plugin": true,
    "stylelint.validate": [
      "css",
      "less",
      "postcss",
      "svelte"
    ],
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "[javascript][javascriptreact][typescript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[json][jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[css][scss][less]": {
        "editor.defaultFormatter": "vscode.css-language-features"
    }
}
